<h1 align = "center"> Login </h1>
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-2">
            <%= f.label :email %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Email Adress", autofocus: true%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-2">
            <%= f.label :password %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", autocomplet: false%>
        </div>
      </div>
    </div>
    <div align = "center">
    <div class="form-group ">
            <%= f.submit 'Login', class: 'btn btn-primary btn-lg', data: { no_turbolink: true } %>
    </div>
  </div>
<%end %>
